{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts","global.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts","src/components/RecoilRootWrapper.tsx", "src/components/editor/constants.jsx", "src/components/editor/editor.jsx"],
  "exclude": ["node_modules"],
  "moduleResolution": [
    "node_modules",
    ".next",
    "node"
  ]
}
